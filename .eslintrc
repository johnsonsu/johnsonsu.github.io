{
  "plugins": ["react"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "no-await-in-loop": 2,
    "no-throw-literal": 2,
    "no-var": 2,
    "prefer-const": 1
  },
  "globals": {
    "React": "writable"
  }
}
